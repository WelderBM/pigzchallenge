{
  "compilerOptions": {
    "jsx": "react",                    
    "strict": true,                   
    "moduleResolution": "node",       
    "target": "esnext",              
    "esModuleInterop": true,          
    "skipLibCheck": true,             
    "resolveJsonModule": true,        
    "allowSyntheticDefaultImports": true, 
    "typeRoots": ["node_modules/@types"] 
  },
  "include": [
    "src",                 
    "declarations.d.ts"    
  ],
  "exclude": [
    "node_modules",       
    "dist"        
  ]
}
